{
  "rules": {
    "enabled": true,
    "referencePaths": [
      ".cursor/ai_instructions.md",
      ".cursor/rules/hallucination-prevention.md",
      ".cursor/rules/file-organization-guidelines.md",
      ".cursor/rules/clean-code-guidelines.md",
      ".cursor/rules/code-quality-standards.md",
      ".cursor/rules/programming-style.md",
      ".cursor/rules/comprehensive-documentation.md",
      ".cursor/rules/development-workflow.md",
      ".cursor/rules/memory-management.md",
      ".cursor/rules/code-review-checklist.md",
      ".cursor/rules/documentation-requirements.md",
      ".cursor/rules/wsl-command-guidelines.md",
      ".cursor/rules/web-search-and-mcp-tools.md"
    ]
  },
  "ai": {
    "guidedByRules": true,
    "respondWithReferenceToRules": true,
    "preferCleanCode": true,
    "includeRuleViolationsInResponses": true,
    "environment": {
      "os": "Windows 11",
      "terminal": "Ubuntu WSL"
    },
    "memoryManagement": {
      "trackBugs": true,
      "maintainPatternRegistry": true,
      "requireVerificationSteps": true,
      "preventDuplication": true,
      "maxFileLines": 500
    },
    "externalResources": {
      "useWebSearch": true,
      "documentSearchResults": true,
      "prioritizeOfficialDocs": true,
      "useMcpTools": true
    }
  },
  "editor": {
    "formatOnSave": true,
    "suggestStyleFixes": true,
    "highlightRuleViolations": true
  }
} 