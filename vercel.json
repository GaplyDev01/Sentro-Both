{
  "version": 2,
  "builds": [
    {
      "src": "src/backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/backend/server.js"
    },
    {
      "src": "/(.*\\.(js|json|css|ico|png|jpg|svg|ttf|woff|woff2)$)",
      "dest": "src/frontend/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "src/frontend/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 