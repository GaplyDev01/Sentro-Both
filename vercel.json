{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth/[...route].js?route=$1"
    },
    {
      "src": "/api/users/(.*)",
      "dest": "/api/users/[...route].js?route=$1"
    },
    {
      "src": "/api/news/(.*)",
      "dest": "/api/news/[...route].js?route=$1"
    },
    {
      "src": "/api/predictions/(.*)",
      "dest": "/api/predictions/[...route].js?route=$1"
    },
    {
      "src": "/(.*\\.(js|json|css|ico|png|jpg|svg|ttf|woff|woff2)$)",
      "dest": "src/frontend/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "src/frontend/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 